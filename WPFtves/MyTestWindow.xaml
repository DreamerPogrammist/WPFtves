<Window x:Class="WPFtves.MyTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFtves"
        mc:Ignorable="d"
        Title="MyTestWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Text="{Binding LastName}"/>

        <DockPanel Grid.Row="1" LastChildFill="False" HorizontalAlignment="Right">
            <Button Name="BtnOk" Click="BtnOk_Click" Width="80" Background="White" Padding="5" Margin="10" DockPanel.Dock="Left">ОК</Button>
            <Button Name="BtnCancel" Click="BtnCancel_Click" Width="80" Background="White" Padding="5" Margin="10" DockPanel.Dock="Left">Отмена</Button>
        </DockPanel>
    </Grid>
</Window>
